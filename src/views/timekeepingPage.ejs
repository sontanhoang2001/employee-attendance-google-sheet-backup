    <div class="mt-4 container">
        <h2>Trạng thái điểm danh</h2>
        <div class="table-responsive">
            <table class="table">
                <tr>
                    <td class="tableName">Số điện thoại:</td>
                    <td>
                        <%= phone %>
                    </td>
                </tr>
                <tr>
                    <td class="tableName">Họ tên tài khoản:</td>
                    <td>
                        <% if (fullName) { %>
                            <%= fullName %>
                                <% } else { %>
                                    (Chưa có tài khoản trong danh sách)
                                    <% } %>
                    </td>
                </tr>
                <tr>
                    <td class="tableName">Họ tên người được điểm danh:</td>
                    <td>
                        <%= fullNameForm %>
                    </td>
                </tr>
                <tr>
                    <td class="tableName">Điểm danh lần đầu:</td>
                    <td>
                        <%= timeStart %>
                    </td>
                </tr>
                <% if (timeEnd) { %>
                    <tr>
                        <td class="tableName">Điểm danh lần cuối:</td>
                        <td>
                            <%= timeEnd %>
                        </td>
                    </tr>
                    <% } %>
                        <tr>
                            <td class="tableName">Mã tiệc:</td>
                            <td>
                                <%= code %>
                            </td>
                        </tr>
                        <tr>
                            <td class="tableName">Trạng thái chấm công:</td>
                            <td>
                                <b>
                                    <%= checkStatus %>
                                </b>
                            </td>
                        </tr>
            </table>
        </div>

        <a href="/chamcong/?code=<%= code %>" class="btn btn-primary">Thoát</a>
    </div>
